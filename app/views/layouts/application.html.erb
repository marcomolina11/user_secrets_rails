<!DOCTYPE html>
<html>
<head>
  <title>UserSecrets</title>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body class="secondary-color">
<% if current_user %>
    <!-- Static navbar -->
    <nav class="navbar primary-color navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand secondary-color-text logo" href="/">Confessions Wall</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a class="secondary-color-text" href="/login">Log out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<!-- end static NavBar -->
    <% else %>
    <!-- Static navbar -->
    <nav class="navbar primary-color navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand secondary-color-text logo" href="/">Confessions Wall</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if controller_name == 'users' && action_name == "new" %>
            <li class="primary-color-light"><a class="secondary-color-text" href="/">Sign up</a></li>
            <li><a class="secondary-color-text" href="/login">Log in</a></li>
            <% else %>
            <li><a class="secondary-color-text" href="/">Sign up</a></li>
            <li class="primary-color-light"><a class="secondary-color-text" href="/login">Log in</a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <% end %>
  <!-- end static NavBar -->
<div class="container">
    <%= yield %>
</div>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

</body>
</html>
