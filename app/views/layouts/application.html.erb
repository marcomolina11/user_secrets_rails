<!DOCTYPE html>
<html>
<head>
  <title>UserSecrets</title>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body class="secondary-color">
<% if current_user %>
    <!-- Static navbar -->
    <nav class="navbar primary-color navbar-static-top">
      <div class="my-navbar">
          <a class="navbar-brand secondary-color-text logo" href="/">Confessions Wall</a>
          <a class="secondary-color-text btn navbar-btn" href="/logout">Log out</a>
      </div>
    </nav>
<!-- end static NavBar -->
    <% else %>
    <!-- Static navbar -->
    <nav class="navbar primary-color navbar-static-top">
      <div class="my-navbar">
          <a class="navbar-brand secondary-color-text logo" href="/">Confessions Wall</a>
          <ul class="my-ul">
            <% if controller_name == 'users' && action_name == "new" %>
            <li><a class="accent-color-text btn navbar-btn active-li" href="/">Sign up</a></li>
            <li><a class="secondary-color-text btn navbar-btn" href="/login">Log in</a></li>
            <% else %>
            <li><a class="secondary-color-text btn navbar-btn" href="/">Sign up</a></li>
            <li><a class="accent-color-text btn navbar-btn active-li" href="/login">Log in</a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
    </nav>
    <% end %>
  <!-- end static NavBar -->
<div class="container">
    <%= yield %>
</div>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

</body>
</html>
