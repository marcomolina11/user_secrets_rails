<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-pills nav-justified">
		  <li role="presentation"><a class="primary-color-light-text inactive-nav-btn" href="/secrets">All Secrets</a></li>
		  <li role="presentation"><a class="white-text active-nav-btn" href="/users/<%= @user.id%>">Profile</a></li>
		  <li role="presentation"><a class="primary-color-light-text inactive-nav-btn" href="/users/<%= @user.id%>/edit" name='Edit Profile' id="Edit Profile">Edit Profile</a></li>
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<h1><%= @user.name %></h1>
	</div>
</div>
<% if alert %>
<div class="row">
	<div class="col-md-8">
		<% alert.each do |message| %>
			<p><%= message %></p>
		<% end %>
	</div>
</div>
<% end %>
<div class="row">
	<div class="col-md-12">
		<h3 class="primary-color-text">New Secret:</h3>
		<form action="/secrets/create" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<div class="form-group">
				<textarea name="content" required placeholder="Write a secret..." class="form-control" rows='5'></textarea>
			</div>
			<button type="submit" class="btn accent-color white-text btn-hover">Create secret</button>
		</form>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<h3 class="primary-color-text">Secrets</h3>
		<% @secrets.each do |secret| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row">
					<div class="col-xs-8 col-sm-8 col-md-8">
						<p><%= secret.content %></p>
					</div>
					<div class="col-xs-1 col-sm-offset-3 col-sm-1 col-sm-offset-3 col-md-1 col-md-offset-3">
						<form action="/secrets/<%= secret.id %>/destroy" method="post">
							<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
							<input type="hidden" name="_method" value="delete">
							<button type="submit" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
						</form>
					</div>
				</div>
				<div class="row">
					<div class="col-md-3">
						<% if secret.likes.count == 1 %>
							<p class='likes-count'><%= secret.likes.count %> like</p>
						<% end %>
						<% if secret.likes.count != 1 %>
							<p class='likes-count'><%= secret.likes.count %> likes</p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<div class="col-md-6">
		<h3 class="primary-color-text">Secrets Liked</h3>
		<% @secrets_liked.each do |secret| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row">
					<div class="col-md-12">
						<p><%= secret.content %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-3">
						<% if secret.likes.count == 1 %>
							<p class='likes-count'><%= secret.likes.count %> like</p>
						<% end %>
						<% if secret.likes.count != 1 %>
							<p class='likes-count'><%= secret.likes.count %> likes</p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
