<div class="container">
	<div class="row">	
		<div class="col-md-4"></div>	
		<div class="col-md-4">
			<h2 class="text-center">Log in</h2>
			<hr>
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<% if alert %>
				<p class="text-center error"><%= alert %></p>
			<% end %>
			<form class="form-horizontal" action="/users/login" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			    <div class="form-group input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-envelope"></span>
					</span>
					<input type="text" class="form-control input-lg" name="email" id="email" placeholder="Email" required>
    			</div>
				<div class="form-group input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-lock"></span>
					</span>
					<input type="password" class="form-control input-lg" name="password" id="password" placeholder="Password" required>
				</div>
				<div class="form-group row no-gutters text-right">
					<a href="#" class="accent-color-text link-hover">Forgot Password?</a>
				</div>
				<div class="form-group">
					<button type="submit" class="btn accent-color white-text btn-hover btn-block btn-lg">Log in</button>
				</div>
				<hr>
			</form>
			
		</div>
		<div class="col-md-4"></div>
	</div>
		<div class="row">	
		<div class="col-md-4"></div>	
		<div class="col-md-4">
			<p id="account" class="text-center">Donâ€™t have an account? <a href="/" class="accent-color-text link-hover">Sign up</a></p>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>